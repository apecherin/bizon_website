.stripe-payment
  .sp-header
    Pay $ #{@product.price} for #{@product.title} with Stripe
  .sp-contents
    = form_tag(payments_path, method: "POST", id: "payment-form") do
      %span.payment-errors
      .form-row-cn
        %span Card Number
        %input{"data-stripe" => "number", :class => "card-number", :size => "20", :type => "text"}/
      .form-row-cvc
        %span CVC
        %input{"data-stripe" => "cvc", :class => "cvc", :size => "2", :type => "text"}/
        .types-card
      .form-row-exp
        .exp
          %span Expiration (MM/YYYY)
          .cc-ddl{:style => "width: 210px; float: right;"}
            %select#cc-month{"data-stripe" => "exp-month", :style => "width: 108px; height: 26px"}
              %option{"data-stripe" => "exp-month",:value => "01"} January
              %option{"data-stripe" => "exp-month",:value => "02"} February
              %option{"data-stripe" => "exp-month",:value => "03"} March
              %option{"data-stripe" => "exp-month",:value => "04"} April
              %option{"data-stripe" => "exp-month",:value => "05"} May
              %option{"data-stripe" => "exp-month",:value => "06"} June
              %option{"data-stripe" => "exp-month",:value => "07"} July
              %option{"data-stripe" => "exp-month",:value => "08"} August
              %option{"data-stripe" => "exp-month",:value => "09"} September
              %option{"data-stripe" => "exp-month",:value => "10"} October
              %option{"data-stripe" => "exp-month",:value => "11"} November
              %option{"data-stripe" => "exp-month",:value => "12"} December
            %span
            %select#cc-year{"data-stripe" => "exp-year", :style => "width: 70px; height: 26px"}
              %option{"data-stripe" => "exp-year",:value => "2013"} 2013
              %option{"data-stripe" => "exp-year",:value => "2014"} 2014
              %option{"data-stripe" => "exp-year",:value => "2015"} 2015
              %option{"data-stripe" => "exp-year",:value => "2016"} 2016
              %option{"data-stripe" => "exp-year",:value => "2017"} 2017
        %input{:name => "prod_id",:value => "#{@product.id}", :type => "hidden"}/
      %button{:type => "submit", :class => "btn btn-inverse submit-pay"} Submit Payment